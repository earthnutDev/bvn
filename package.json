{
  "name": "pjj",
  "type": "module",
  "version": "1.0.1",
  "private": true,
  "description": "禁止在项目的根目录执行 npm publish，防止意外发布。该脚本命令需在 `prepublishOnly`  ` 钩子中配置",
  "scripts": {
    "build": "jja cls rm dist&&rollup --config rollup.config.js&&npm run clean:package",
    "clean:package": "node scripts/clean-package-json.js",
    "dev": "npm run build && jja cls && node dist/bin.mjs -s=dev",
    "diff": "jja cls pkg --diff",
    "push:version": "gvv",
    "push": "gvv",
    "eslint": "jja cls && eslint src",
    "beautify": "npm run prettier",
    "prettier": "jja cls && prettier . --write",
    "test": "jja cls rm dist && lint-staged && jest --coverage",
    "vjj": "jja cls && vjj",
    "prepublishOnly": "npm run build  && node dist/bin.mjs",
    "prepare": "husky"
  },
  "license": "MIT",
  "dependencies": {
    "@qqi/dev-log": "^1.0.3",
    "a-command": "^2.3.7",
    "a-js-tools": "^1.0.0",
    "a-node-tools": "^4.2.6",
    "a-type-of-js": "^1.0.0",
    "color-pen": "^2.0.10"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jex,md,mdx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.28.0",
    "@qqi/check-version": "^1.0.1",
    "@qqi/rollup-external": "^1.0.2",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^24.0.0",
    "codecov": "^3.8.3",
    "coveralls": "^3.1.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^50.7.1",
    "globals": "^16.2.0",
    "gvv": "^0.0.5",
    "husky": "^9.1.7",
    "jja": "^2.3.8",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "rollup": "^4.42.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vjj": "^1.0.4"
  }
}
